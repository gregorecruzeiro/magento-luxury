	<table class="lx-addtocart-custom">
		<tbody class="add-to-cart">
			<?php if(!$_product->isGrouped()): ?>
			<tr class="cart-subtotal">
				<th>Pre√ßo</th>
				<td><span class="amount"><?php echo $this->getChildHtml('', true, true) ?></span></td>
