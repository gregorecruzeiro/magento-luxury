/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<div class="large-product">
	<div id="about-carousel" class="col-md-3 col-sm-3 col-xs-3 flexslider product-thumb no-padding">
		<ul class="slides">
		<?php if (count($this->getGalleryImages()) > 0): ?>
		<?php foreach ($this->getGalleryImages() as $_image): ?>
			<li>
				<img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(170); ?>" rel="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(170,170); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>" />
			</li>
		<?php endforeach; ?>	
		<?php endif; ?>
		</ul>
	</div>
	<div id="about-slider" class="flexslider col-md-9 col-sm-9 col-xs-9 product-slider">
    <?php if($_product->getFinalPrice() < $_product->getPrice()): ?>
      <span class="tag-promo"><img src="/loja/media/wysiwyg/promo-label.png" title="" alt=""></span>
    <?php endif; ?>
		<ul class="slides">
		    <?php $i=0; foreach ($this->getGalleryImages() as $_image): ?>
            <?php if ($this->isGalleryImageVisible($_image)): ?>
			<li>
            <img id="image-<?php echo $i; ?>"
                 class="gallery-image magniflier"
                 src="<?php echo $this->getGalleryImageUrl($_image); ?>"
                 data-zoom-image="<?php echo  $this->getGalleryImageUrl($_image); ?>" alt="<?php echo $this->escapeHtml($_image->getLabel()) ?>"/>
			</li>
            <?php endif; ?>
			<?php $i++; endforeach; ?>	
		</ul>
	</div>
</div>
