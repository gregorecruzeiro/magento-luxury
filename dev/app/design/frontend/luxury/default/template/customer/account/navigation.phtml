<div class="section-header" id="account-nav-title">
	<span><i class="fa fa-chevron-down"></i></span>
	<h3><?php echo $this->__('My Account'); ?></h3>
</div>
<div class="block block-account bottom-shadow contact-form" id="account-nav-content">

    <div class="block-content">
      
            <?php $_links = $this->getLinks(); ?>
            <?php $_index = 1; ?>
            <?php $_count = count($_links); ?>
            <?php foreach ($_links as $_link): ?>
                <?php $_last = ($_index++ >= $_count); ?>
                <?php if ($this->isActive($_link)): ?>
                    <p class="current<?php echo ($_last ? ' last' : '') ?>"><strong><?php echo $_link->getLabel() ?></strong></p>
                <?php else: ?>
                    <p<?php echo ($_last ? ' class="last"' : '') ?>><a href="<?php echo $_link->getUrl() ?>"><?php echo $_link->getLabel() ?></a></p>
                <?php endif; ?>
            <?php endforeach; ?>
   
    </div>
</div>
